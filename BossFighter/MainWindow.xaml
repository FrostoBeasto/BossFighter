<Window x:Class="BossFighter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BossFighter"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" MaxHeight="475" Width="400" MaxWidth="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#C7B13A">
        <StackPanel>
            <TextBlock Text="Welcome to" Foreground="Black" HorizontalAlignment="Center" FontSize="30"/>
            <TextBlock Text="Onion Bro Fighter" HorizontalAlignment="Center" FontSize="35" Foreground="#372C10" FontFamily="Italic"/>
            <Image Source="Obrazky\Menu.png" Height="250" Margin="65,0,0,0" Width="500"/>
            <TextBlock Text="Enter your name:" HorizontalAlignment="Center" FontSize="25"/>
            <TextBox x:Name="Jmeno" Height="35" FontSize="28" TextAlignment="Center" Background="Black" 
                 Foreground="White" Width="400"/>
            <Button Height="35" Content="Confirm" Background="Black" Foreground="White" Click="Button_Click" 
                FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
